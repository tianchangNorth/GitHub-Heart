{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Atomic Heart",
  "version": "1.0.0",
  "identifier": "com.tauri-app.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Atomic Heart",
        "width": 1440,
        "height": 900,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "plugins": {
    "opener": null,
    "dialog": null,
    "store": null,
    "deep-link": {
      "desktop": {
        "schemes": ["atomic-heart"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Modern Git Repository Management Application",
    "longDescription": "Atomic Heart is a modern Git repository management application built with Tauri and Vue.js",
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "languages": ["English"]
      }
    }
  }
}
